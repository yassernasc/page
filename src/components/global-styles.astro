<style is:global>
  :root {
    --mono: Menlo, Consolas, Monaco, Liberation Mono, Lucida Console, monospace;
    --old-style: 'Iowan Old Style', 'Palatino Linotype', 'URW Palladio L', P052,
      serif;
    --humanista: Seravek, 'Gill Sans Nova', Ubuntu, Calibri, 'DejaVu Sans',
      source-sans-pro, sans-serif;
    --geometric-humanist: Avenir, Montserrat, Corbel, 'URW Gothic',
      source-sans-pro, sans-serif;
    --rounded-sans: ui-rounded, 'Hiragino Maru Gothic ProN', Quicksand,
      Comfortaa, Manjari, 'Arial Rounded MT', 'Arial Rounded MT Bold', Calibri,
      source-sans-pro, sans-serif;
    --handwritten: 'Segoe Print', 'Bradley Hand', Chilanka, TSCu_Comic, casual,
      cursive;
    --system-ui: system-ui, sans-serif;
  }

  *,
  *::before,
  *::after {
    box-sizing: inherit;
  }

  * {
    margin: 0;
    padding: 0;
  }

  html {
    -moz-text-size-adjust: none;
    -webkit-text-size-adjust: none;
    box-sizing: border-box;
    color-scheme: light dark;
    text-size-adjust: none;
  }

  html:focus-within {
    scroll-behavior: smooth;
  }

  body {
    -moz-osx-font-smoothing: grayscale;
    -webkit-font-smoothing: antialiased;
    display: flex; /* https://stackoverflow.com/questions/44645465 */
    flex-direction: column;
    font-size: 16px;
    line-height: 1.5;
    min-height: 100vh;
    overflow-wrap: break-word;
    text-rendering: optimizeSpeed;
  }

  img,
  picture,
  video {
    display: block;
    max-width: 100%;
  }

  h1,
  h2,
  h3 {
    line-height: 1.15;
    text-wrap: balance;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-size: 1rem;
    font-weight: normal;
  }

  p {
    hyphens: auto;
  }

  ul {
    list-style: none;
  }

  a,
  button {
    cursor: pointer;
  }
</style>
