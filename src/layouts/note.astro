---
import Layout from '@layouts/base.astro'

const { frontmatter } = Astro.props
---

<Layout frontmatter={frontmatter}>
  <link rel="stylesheet" href="/typography.css" />
  <div class="container">
    <slot />
  </div>
</Layout>

<style>
  .container {
    font-family: var(--mono);
    margin: 40px auto;
    max-width: 40rem;
  }
</style>
